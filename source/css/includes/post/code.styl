.highlight
  margin: 10px 0
  border-radius: 5px
  overflow-x: auto
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2), -1px -1px 2px rgba(0, 0, 0, 0.2)

code
  padding: 2px 5px
  color: rgb(132 204 22)

.gutter
  font-size: 0.875rem

  .line
    display: inline-block
    padding: 0 0.5rem

.code
  font-size: 0.875rem

  pre
    padding: 0.25rem 0

  .line
    display: inline-block
    padding: 0 0.5rem

  .comment, .quote
    color: pop(code_color)

  .keyword, .selector-tag, .addition
    color: pop(code_color)

  .number, .string, .meta .meta-string, .literal, .doctag, .regexp
    color: pop(code_color)

  .title, .section, .name, .selector-id, .selector-class
    color: pop(code_color)

  .attribute, .attr, .variable, .template-variable, .class .title, .type
    color: pop(code_color)

  .symbol, .bullet, .subst, .meta, .meta .keyword, .selector-attr, .selector-pseudo, .link
    color: pop(code_color)

  .built_in, .deletion
    color: pop(code_color)